
<div class="container">
    <h1>Welcome to Let's Talk- <em>a complete Chat App</em></h1>
    <i class="power off large red icon"></i>
    <h3>Log in to continue</>
</div>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
        <%= form_for(:session, html: {class: 'ui form'}, url: login_path) do |f|%>
            <div class="field">
                <%= f.label 'Username'%>
                <div class="ui left icon input">
                    <%= f.text_field :username, placeholder: 'Username'%>
                    <i class="user icon"></i>
                </div>
                <div class="field">
                <%= f.label 'Password'%>
                <div class="ui left icon input">
                    <%=f.password_field :password, placeholder: 'Password'%>
                    <i class="lock icon"></i>
                </div>
            </div>
            <%= f.submit 'Login', class: 'ui red submit button'%>
        <%end%>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup red icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>